const getQuotes = async () => {
    const res = await fetch(`https://api.coingecko.com/api/v3/simple/price?ids=handshake,bitcoin,ethereum&vs_currencies=usd`, {});
    const json = await res.json();
    const quotes = {
        handshake: json.handshake.usd,
        bitcoin: json.bitcoin.usd,
        ethereum: json.ethereum.usd
    };
    return quotes;
};

const Coingecko = {};
Coingecko.getQuotes = getQuotes;

export default Coingecko;